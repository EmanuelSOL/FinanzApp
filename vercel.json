{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["../dist/**"] }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/index" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}
